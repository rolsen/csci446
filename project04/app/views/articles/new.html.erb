...not just for the country of Spain
<% end %>

<h1>New article</h1>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :fulltext %><br />
    <%= f.text_area :fulltext %>
  </p>
  <p>
    <%= f.label :update_count %><br />
    <%= f.text_field :update_count %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', articles_path %>